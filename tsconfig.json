{
  "compilerOptions": {
    "target": "es2016",
    "module": "Node16",
    "lib": ["ES6"],
    "allowJs": true,
    "types": ["node"],
    "sourceMap": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
